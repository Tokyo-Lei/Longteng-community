<div class="aw-mod aw-text-align-justify">
    <div class="mod-head">
        <a href="#" class="pull-right">更多</a>
        <h3>热门用户</h3>
    </div>
    <div class="mod-body">
        <% hotUsers.forEach(user=>{%>
        <dl>
            <dt class="pull-left aw-border-radius-5">
                <a href="/user/<%= user.name%>"><img src="<%= user.avatar %>"></a>
            </dt>
            <dd class="pull-left">
                <a href="#" class="aw-user-name"><%= user.name%></a>
                <p class="signature"></p>
                <p>
                    <b><%= user.score%></b>个积分
                    <b>0</b>次赞同
                </p>
            </dd>
        </dl>
        <% }) %>
    </div>
</div>